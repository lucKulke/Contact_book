<%= form_with(model: contact) do |form| %>
  <% if contact.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(contact.errors.count, "error") %> prohibited this contact from being saved:</h2>

      <ul>
        <% contact.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field form-group">
    
    <%= form.text_field :first_name, class:"form-control", placeholder:"First name" %>
  </div>
<br>
  <div class="field form-group">
    
    <%= form.text_field :last_name, class:"form-control", placeholder:"Last name"   %>
  </div>
<br>
  <div class="field form-group">
   
    <%= form.text_field :email, class:"form-control", placeholder:"Email"   %>
  </div>
<br>
  <div class="field form-group">
    
    <%= form.text_field :phone, class:"form-control", placeholder:"Phone Number"  %>
  </div>
<br>
  <div class="field form-group">
    
    <%= form.text_field :adress, class:"form-control", placeholder:"Adress"  %>
  </div>
  <br>
  <div class="field form-group">
    
    <%= form.number_field :user_id, id: :contact_user_id, class:"form-control", value: current_user.id , type: :hidden %>
  </div>
  
<br>
  <div class="actions">
    <%= form.submit %>
  </div>

<% end %>
